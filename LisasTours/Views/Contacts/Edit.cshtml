@model LisasTours.Models.ViewModels.ContactVM

@{
    ViewData["Title"] = "Редактирование контакта";
}

<h2>Редактирование контакта</h2>
<h4>@Model.CompanyName</h4>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="LastName" class="control-label">Фамилия</label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">Имя</label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PatronymicName" class="control-label">Отчество</label>
                <input asp-for="PatronymicName" class="form-control" />
                <span asp-validation-for="PatronymicName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">Почта</label>
                <input asp-for="Mail" class="form-control" />
                <span asp-validation-for="Mail" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">Тип</label>
                <input name="ContactTypeName" class="form-control" list="contactTypesDatalist" value="@Model.ContactTypeName">
                <span asp-validation-for="ContactTypeName" class="text-danger"></span>
            </div>

            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

<datalist id="contactTypesDatalist">
    @foreach (var item in ViewBag.ContactTypes)
    {
        <option value="@item.Name" />
    }
</datalist>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
