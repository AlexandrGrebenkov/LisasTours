@model LisasTours.Models.Company

@{
    ViewData["Title"] = "Добавление компании";
}

<h2>Добавление компании</h2>

<hr />
<div class="row">
    <form asp-action="Create">
        <div class="row">
            <div class="col-md-4">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label class="control-label">Название</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label class="control-label">Сайт</label>
                    <input asp-for="Site" class="form-control" />
                    <span asp-validation-for="Site" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label class="control-label">Виды деятельности</label>
                    <input name="BusinessLine" class="form-control" list="datalist1">
                    <button type="button" class="btn btn-secondary" onclick="addNewBusinessLine()" id="blBtn">+</button>
                    <datalist id="datalist1">
                        @foreach (var item in ViewBag.BusinessLine)
                        {
                            <option value="@item.Name" />
                        }
                    </datalist>
                </div>

                <div class="form-group">
                    <label class="control-label">Представительства</label>
                    <input name="Affiliation" class="form-control" list="regionDatalist">
                    <button type="button" class="btn btn-secondary" onclick="addNewAffiliation()" id="affiliationBtn">+</button>
                    <datalist id="regionDatalist">
                        @foreach (var item in ViewBag.Regions)
                        {
                            <option value="@item.Name" />
                        }
                    </datalist>
                </div>

                <div>
                    <dl class="dl-horizontal">
                        <dt>Email</dt>
                        <dd>
                            <input type="text" name="Contacts[0].Mail" class="form-control" />
                        </dd>
                        <dt>Тип</dt>
                        <dd>
                            <input name="Contacts[0].ContactType.Name" class="form-control" list="contactTypesDatalist">
                        </dd>

                        <dt>Фамилия</dt>
                        <dd>
                            <input type="text" name="Contacts[0].LastName" class="form-control" />
                        </dd>

                        <dt>Имя</dt>
                        <dd>
                            <input type="text" name="Contacts[0].FirstName" class="form-control" />
                        </dd>

                        <dt>Отчество</dt>
                        <dd>
                            <input type="text" name="Contacts[0].PatronymicName" class="form-control" />
                        </dd>
                    </dl>
                    <button type="button" class="btn btn-secondary" onclick="addNewContact()" id="contactBtn">+</button>
                    <datalist id="contactTypesDatalist">
                        @foreach (var item in ViewBag.ContactTypes)
                        {
                            <option value="@item.Name" />
                        }
                    </datalist>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label class="control-label">Описание</label>
                    <textarea asp-for="Information" class="form-control"></textarea>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                <div>
                    <a asp-action="Index">Back to List</a>
                </div>
                <div class="form-group">
                    <input type="submit" value="Добавить" class="btn btn-success" />
                </div>
            </div>
        </div>
    </form>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<script>
    function addNewBusinessLine() {
        var input = document.createElement("input");
        input.setAttribute('class', 'form-control');
        input.setAttribute('name', 'BusinessLine');
        input.setAttribute('list', 'datalist1');
        blBtn.before(input)
    }
</script>

<script>
    function addNewAffiliation() {
        var input = document.createElement("input");
        input.setAttribute('class', 'form-control');
        input.setAttribute('name', 'Affiliation');
        input.setAttribute('list', 'regionDatalist');
        affiliationBtn.before(input)
    }
</script>

<script>
    function addNewContact() {
        var input = document.createElement("input");
        input.setAttribute('class', 'form-control');
        input.setAttribute('name', 'Affiliation');
        input.setAttribute('list', 'regionDatalist');
        contactBtn.before(input)
    }
</script>
