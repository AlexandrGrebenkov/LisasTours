@model LisasTours.Models.Company

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Company</h4>
<hr />
<div class="row">
    <form asp-action="Create">
        <div class="row">
            <div class="col-md-4">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Site" class="control-label"></label>
                    <input asp-for="Site" class="form-control" />
                    <span asp-validation-for="Site" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label class="control-label">Виды деятельности</label>
                    <input name="BusinessLine" class="form-control" list="datalist1">
                    <button type="button" class="btn btn-secondary" onclick="addNewBusinessLine()" id="blBtn">+</button>
                    <datalist id="datalist1">
                        @foreach (var item in ViewBag.BusinessLine)
                        {
                            <option value="@item.Name" />
                        }
                    </datalist>
                </div>

                <div class="form-group">
                    <label class="control-label">Представительства</label>
                    <input name="Affiliation" class="form-control" list="regionDatalist">
                    <button type="button" class="btn btn-secondary" onclick="addNewAffiliation()" id="affiliationBtn">+</button>
                    <datalist id="regionDatalist">
                        @foreach (var item in ViewBag.Regions)
                        {
                            <option value="@item.Name" />
                        }
                    </datalist>
                </div>

                <div>
                    <table class="table">
                        <tr>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>Email</th>
                            <th>Type</th>
                        </tr>
                        @for (var i = 0; i < 5; i++)
                        {
                            <tr>
                                <td>
                                    <input type="text" name="Contacts[@i].FirstName" />
                                </td>
                                <td>
                                    <input type="text" name="Contacts[@i].LastName" />
                                </td>
                                <td>
                                    <input type="text" name="Contacts[@i].Mail" />
                                </td>
                                <td>
                                    <select name="Contacts[@i].ContactTypeId" asp-items="ViewBag.ContactTypes"></select>
                                </td>
                            </tr>
                        }
                    </table>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="Information" class="control-label"></label>
                    <textarea asp-for="Information" class="form-control"></textarea>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                <div>
                    <a asp-action="Index">Back to List</a>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-success" />
                </div>
            </div>
        </div>
    </form>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<script>
    function addNewBusinessLine() {
        var input = document.createElement("input");
        input.setAttribute('class', 'form-control');
        input.setAttribute('name', 'BusinessLine');
        input.setAttribute('list', 'datalist1');
        blBtn.before(input)
    }
</script>

<script>
    function addNewAffiliation() {
        var input = document.createElement("input");
        input.setAttribute('class', 'form-control');
        input.setAttribute('name', 'Affiliation');
        input.setAttribute('list', 'regionDatalist');
        affiliationBtn.before(input)
    }
</script>
