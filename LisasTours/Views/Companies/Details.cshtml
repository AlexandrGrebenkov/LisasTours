@model LisasTours.Models.Company

@{
    ViewData["Title"] = @Html.DisplayFor(model => model.Name);
}

<h2>@Html.DisplayFor(model => model.Name)</h2>

<div>
    <hr />
    <div class="row">
        <div class="col-md-8">
            <dl class="dl-horizontal">
                <dt>
                    Название
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Name)
                </dd>
                <dt>
                    Сайт
                </dt>
                <dd>
                    <a href="http://@Html.DisplayFor(model => model.Site)" target="_blank">@Html.DisplayFor(model => model.Site)</a>
                </dd>
                <dt>
                    Направления
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.BusinessLinesString)
                </dd>
                <dt>
                    Регионы
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.AffiliatesString)
                </dd>
                <dt>
                    Описание
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Information)
                </dd>
            </dl>
        </div>
        <div class="col-md-2">
            @foreach (var contact in Model.Contacts)
            {
                <dl class="dl-horizontal">
                    <dt>
                        Имя
                    </dt>
                    <dd>
                        @contact.FullName
                    </dd>
                    <dt>
                        Почта
                    </dt>
                    <dd>
                        @contact.Mail
                    </dd>
                    <dt>
                        Тип почты
                    </dt>
                    <dd>
                        @contact.ContactType.Name
                    </dd>
                </dl>
            }
        </div>
    </div>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
