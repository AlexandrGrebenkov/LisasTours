@model LisasTours.Models.Company

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Company</h4>
<hr />
<div class="row">
    <form asp-action="Edit">
        <div class="col-md-4">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Site" class="control-label"></label>
                <input asp-for="Site" class="form-control" />
                <span asp-validation-for="Site" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BusinessLineId" class="control-label"></label>
                <select asp-for="BusinessLineId" class="form-control" asp-items="ViewBag.BusinessLineId"></select>
                <span asp-validation-for="BusinessLineId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RegionId" class="control-label"></label>
                <select asp-for="RegionId" class="form-control" asp-items="ViewBag.RegionId"></select>
                <span asp-validation-for="RegionId" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-4">
            <div>
                <table class="table">
                    <tr>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Email</th>
                        <th>Type</th>
                    </tr>
                    @for (var i = 0; i < 5; i++)
                    {
                        <tr>
                            <td>
                                <input type="text" name="[@i].FirstName" />
                            </td>
                            <td>
                                <input type="text" name="[@i].LastName" />
                            </td>
                            <td>
                                <input type="text" name="[@i].Mail" />
                            </td>
                            <td>
                                <select name="[@i].ContactTypeId" asp-items="ViewBag.ContactTypes"></select>
                            </td>
                        </tr>
                    }
                </table>
            </div>
            <div class="form-group">
                <label asp-for="Information" class="control-label"></label>
                <textarea asp-for="Information" class="form-control"></textarea>
            </div>
        </div>
        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </form>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
