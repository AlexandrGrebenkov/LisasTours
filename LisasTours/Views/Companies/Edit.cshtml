@model LisasTours.Models.Company

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Company</h4>
<hr />
<div class="row">
    <form asp-action="Edit">
        <div class="row">
            <div class="col-md-4">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Site" class="control-label"></label>
                    <input asp-for="Site" class="form-control" />
                    <span asp-validation-for="Site" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Виды деятельности</label>
                    @foreach (var bl in Model.BusinessLines)
                    {
                        <input name="BusinessLine" class="form-control" list="datalist1" value="@bl.BusinessLine.Name">
                    }
                    <button type="button" class="btn btn-secondary" onclick="addNewBusinessLine()" id="blBtn">+</button>
                    <datalist id="datalist1">
                        @foreach (var item in ViewBag.BusinessLine)
                        {
                            <option value="@item.Name" />
                        }
                    </datalist>
                </div>
            </div>
            <div class="col-md-4">
                <div>
                    <table class="table">
                        <tr>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>Email</th>
                            <th>Type</th>
                        </tr>
                        @for (int i = 0; i < Model.Contacts.Count; i++)
                        {
                            <tr>
                                <td>
                                    <input type="text" name="Contacts[@i].FirstName" value="@(Model.Contacts[i].FirstName)" />
                                </td>
                                <td>
                                    <input type="text" name="Contacts[@i].LastName" value="@(Model.Contacts[i].LastName)" />
                                </td>
                                <td>
                                    <input type="text" name="Contacts[@i].Mail" value="@(Model.Contacts[i].Mail)" />
                                </td>
                                <td>
                                    <select name="Contacts[@i].ContactTypeId" asp-items="ViewBag.ContactTypes"></select>
                                </td>
                            </tr>
                        }
                    </table>
                </div>
                <div class="form-group">
                    <label asp-for="Information" class="control-label"></label>
                    <textarea asp-for="Information" class="form-control"></textarea>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                <div>
                    <a asp-action="Index">Back to List</a>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-success" />
                </div>
            </div>
        </div>
    </form>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<script>
    function addNewBusinessLine() {
        var input = document.createElement("input");
        input.setAttribute('class', 'form-control');
        input.setAttribute('name', 'BusinessLine');
        input.setAttribute('list', 'datalist1');
        blBtn.before(input)
    }
</script>