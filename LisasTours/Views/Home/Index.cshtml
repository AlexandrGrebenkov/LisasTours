@model LisasTours.Models.ViewModels.CompanySearchVM

@{
    ViewData["Title"] = "Home Page";
}

<h2>Поиск компаний</h2>
<hr />
<div class="row">
    <form asp-action="Search" asp-controller="Companies">

        <div class="form-group">
            <label name="Регионы" class="control-label"></label>
            <input name="RegionNames" class="form-control" list="regionDatalist" />
            <button type="button" class="btn btn-secondary" onclick="addNewRegion()" id="regionBtn">+</button>
            <datalist id="regionDatalist">
                @foreach (var item in ViewBag.Regions)
                {
                    <option value="@item.Name" />
                }
            </datalist>
        </div>

        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    <input type="submit" value="Поиск" class="btn btn-primary" />
                </div>
            </div>
        </div>
    </form>
</div>

<script>
    function addNewRegion() {
        var input = document.createElement("input");
        input.setAttribute('class', 'form-control');
        input.setAttribute('name', 'RegionNames');
        input.setAttribute('list', 'regionDatalist');
        regionBtn.before(input)
    }
</script>

